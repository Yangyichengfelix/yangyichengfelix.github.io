@page "/guessflag"
@inject HttpClient _httpClient
@inject IJSRuntime JSRuntime
<MudContainer>

<h3>GuessFlag</h3>
@if (RegionToGuess.Proposed.Count > 0)
{
    
    <MudImage  Width="250" src="@RegionToGuess.Proposed[0]" />
}
else if (RegionToGuess.Official.Count > 0)
{
    
        <MudImage Width="250" src="@RegionToGuess.Official[0]" />
}
<IndividualLetterComboInput OnHintAsked="Decrement" OnWordOk="nextFlag" HintAvaiable="@(Points>0)" StringInit="@RegionToGuess.Region"></IndividualLetterComboInput>
<h2>Points: @Points</h2>
</MudContainer>